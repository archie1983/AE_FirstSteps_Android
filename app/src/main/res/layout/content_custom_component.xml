<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CustomComponentActivity"
    tools:showIn="@layout/activity_custom_component">

    <com.ae.ae_firststeps_android.TimeView
        android:id="@+id/timeView"
        app:setColor="true"
        app:title="my time view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="602dp"
        android:textColor="#fff"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSimple" />

    <TextView
        android:id="@+id/txtSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeView"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="484dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeView"/>
</android.support.constraint.ConstraintLayout>